-- PREMIUM SEKMESÄ° GÃœNCELLEMESÄ° (Ä°stediÄŸiniz Fire Logic Dahil)
createSection(Tabs.Premium, "Ultimate Bypass & Scripts")

createButton(Tabs.Premium, "ðŸ”¥ Evi Yak (Decompiled Fix)", function()
    -- 1. Decompiled Logic Implementation
    pcall(function()
        local Game8Settings = require(game:GetService("StarterGui").Player8Handler.Game8Settings)
        if Game8Settings and Game8Settings.PlayersHouse then
            Game8Settings.PlayersHouse:FireServer("PlayerWantsFire")
        end
    end)

    -- 2. GUI Modal Control (MainGUIHandler -> ModalFireAsk)
    pcall(function()
        local playerGui = player:WaitForChild("PlayerGui")
        local mainGuiHandler = playerGui:FindFirstChild("MainGUIHandler")
        if mainGuiHandler then
            local modalFireAsk = mainGuiHandler:FindFirstChild("ModalFireAsk")
            if modalFireAsk then
                modalFireAsk.Visible = true
                -- DEX KontrollÃ¼ true (EÄŸer Script bir toggle arÄ±yorsa)
                if modalFireAsk:FindFirstChild("Visible") then
                    modalFireAsk.Visible = true
                end
            end
        end
    end)
    
    StarterGui:SetCore("SendNotification", {
        Title = "XenoHub Fire",
        Text = "YangÄ±n isteÄŸi gÃ¶nderildi ve Modal aÃ§Ä±ldÄ±!",
        Duration = 3
    })
end)

createButton(Tabs.Premium, "ðŸ‘‘ FULL PREMIUM AKTÄ°F ET", function()
    spawn(function()
        pcall(function()
            local Ads = require(ReplicatedStorage.Modules.Client.Ads.AdvertisementsController)
            Ads.GetUnlockedDuration = function() return 72000 end
            Ads.AllPassesFetched = true
        end)
        pcall(function()
            local GP = require(ReplicatedStorage.Modules.Client.UI.GamepassUnlockController)
            GP.OwnsGamepass = function() return true end
            GP.AllPassesFetched = true
        end)
    end)
end)

